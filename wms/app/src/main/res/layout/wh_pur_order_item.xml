<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_42dip"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="66dp"
        android:layout_height="@dimen/_42dip"
        android:gravity="center"
        android:text="日期"
        android:maxLength="10"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_stNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mts"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42dip"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="物料代码/名称"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_numUnit"
        android:layout_width="68dp"
        android:layout_height="@dimen/_42dip"
        android:gravity="center"
        android:text="数量/单位"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="38dp"
        android:layout_height="@dimen/_38dip"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/check_false"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
